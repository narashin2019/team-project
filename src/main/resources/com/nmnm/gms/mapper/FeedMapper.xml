<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.nmnm.gms.dao.FeedDao">

  <resultMap type="Feed" id="FeedMap">
    <id column="feed_no"   property="feedNo"/>
    <result column="group_no"    property="groupNo"/>
    <result column="member_no" property="memberNo"/>
    <result column="title"  property="title"/>
    <result column="content"  property="content"/>
    <result column="create_date"    property="createDate"/>
    <result column="view_count"    property="viewCount"/>
    
    <collection property="feedPhotos" ofType="FeedPhoto">
    <id column="feed_photo_no"   property="feedPhotoNo"/>
    </collection>
  </resultMap>
  
  <sql id="select1">
    select
      feed_no,
      member_no,
      group_no,
      title,
      content,
      create_date,
      view_count
    from 
      nm_feed 
  </sql>
  
  
  <insert id="insert" parameterType="Feed">
    insert into nm_feed(
      group_no,
      member_no, 
      title, 
      content
      )
    values(
      #{groupNo},
      #{memberNo},
      #{title}, 
      #{content}
      )
  </insert>
  
  <select id="findAll" resultMap="FeedMap">
    <include refid="select1"/>
    order by
      feed_no desc
  </select>

  
  <select id="findByNo" resultMap="FeedMap" parameterType="int">
    select
      feed_no,
      member_no,
      group_no,
      title,
      content,
      create_date,
      view_count
    from 
      nm_feed
    where
      feed_no=#{feedNo}
  </select>
  
  <update id="update" parameterType="Feed">
    update nm_feed set
      group_no=#{groupNo},
      member_no=#{memberNo},
      title=#{title},
      content=#{content}
    where 
      feed_no=#{feedNo}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from nm_feed
    where feed_no=#{feedNo}
  </delete>
  
  <select id="findByKeyword" resultMap="FeedMap" parameterType="string">
  <bind name="keywordPattern" value="'%' + _parameter + '%'"/>
    select
      feed_no,
      member_no, 
      title,
      create_date,
      view_count  
    from 
      nm_feed
    where
      title like #{title}
      or content like #{content}
  </select>
  
</mapper>